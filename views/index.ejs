<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <h1>My Bank</h1>
            <div class="d-flex flex-column text-center justify-content-between pt-4">
                <h3>Login</h3>
                <div class="d-flex justify-content-center p-3 m-3 border border-dark">

                    <form action='/yourDashboard' method='POST'>
                        <label for='name'>Username </label><br/>
                        <input class="mb-3" type='text' name='name' /><br/>
                        <label for='pass'>Password</label><br/>
                        <input class="mb-3" type='password' name='pass' /><br/>
                        <input class="mb-3 btn btn-primary" type='submit' role="button" value='LogIn' />
                    </form>
                </div>
                <form action='/forgotPassword' method='POST'>
                    <label for='name2'>Email </label><br/>
                    <input class="mb-3" type='text' name='name2' /><br/>
                    <input class="mb-3 btn btn-primary" type='submit' role="button" value='Forgot Password' />
                </form>
                <h3>Sign Up</h3>
                <div class="d-flex justify-content-center p-3 m-3 border border-dark">
                    <form action='/home' method='POST'>
                        <label for='name1'>Username </label><br/>
                        <input class="mb-3" type='text' name='name1' /><br/>
                        <label for='pass'>Password</label><br/>
                        <input class="mb-3" type='password' name='pass1' /><br/>
                        <label for='address'>Address </label><br/>
                        <input class="mb-3" type='text' name='address' /><br/>
                        <label for='phone'>Phone Number</label><br/>
                        <input class="mb-3" type='text' name='phone' /><br/>
                        <label for='mail'>E-mail</label><br/>
                        <input class="mb-3" type='text' name='mail' /><br/>
                        <label>Account Type</label>
                        <select class="form-control" name="types">
                            <option >select one of the following types</option>
                                <% if (type.length>0){
                                    for (let Type of type){%>
                                      
                                        <option value="<%=Type.accountType%>" ><%=Type.accountType%></option>
                                        <%}%>
                                        <% } else {%>
                                            <option>No Account Types found</option>
                                            <%}%>
                            </select>
                        <label>Role</label>
                        <select class="form-control" name="roles">
                            <option >select one of the following roles</option>
                                <% if (role.length>0){
                                    for (let ROLE of role){%>
                                      
                                        <option value="<%=ROLE.roleType%>" ><%=ROLE.roleType%></option>
                                        <%}%>
                                        <% } else {%>
                                            <option>No Roles found</option>
                                            <%}%>
                            </select>
                        <br>
                        <br>

                        <input type='submit' role="button" class="btn btn-primary" value='Sign Up' />
                    </form>

                </div>
            </div>
        </div>
    </div>
    <script src="../*.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>