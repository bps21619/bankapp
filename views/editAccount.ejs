<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-5">
                <div class="d-flex flex-column justify-content-center">
                    <form class="product-form" action="/<% if (editing) { %>editAccount<% }%>" method="POST">
                        <div class="border m-4 p-4 text-center">
                            <label for="password">Password</label>
                            <input type="text" name="password" value="<% if (editing) { %><%= user.password %><% } %>">
                        </div>
                        <div class="border m-4 p-4 text-center">
                            <label for="address">Address</label>
                            <input type="text" name="address" value="<% if (editing) { %><%= user.address %><% } %>">
                        </div>
                        <% if(roleType =='Admin') {%>
                            <select class="form-control" name="types">
                                <option >select one of the following types</option>
                                    <% if (type.length>0){
                                        for (let Type of type){%>
                                          
                                            <option value="<%=Type.accountType%>" ><%=Type.accountType%></option>
                                            <%}%>
                                            <% } else {%>
                                                <option>No Account Types found</option>
                                                <%}%>
                                </select>
                            <%}%>
                                <button class="btn btn-primary mt-4" type="submit"><% if (editing) { %>Update User<% }%></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>